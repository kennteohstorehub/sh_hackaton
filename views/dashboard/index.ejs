                                            <div class="customer-card-header">
                                                <span class="position-badge"><%= customer.position %></span>
                                                <h3><%= customer.customerName %></h3>
                                                <% if (customer.status === 'called') { %>
                                                    <span class="status-badge notified">CALLED</span>
                                                <% } else if (index === 0 && customer.status === 'waiting') { %>
                                                    <span class="status-badge next">NEXT</span>
                                                <% } %>
                                            </div>
                                            <div class="customer-card-body">
                                                <% if (customer.verificationCode) { %>
                                                    <div class="customer-info-row" style="margin-bottom: 10px;">
                                                        <i class="bi bi-key-fill"></i>
                                                        <span class="code-badge" style="font-size: 1.2rem;"><%= customer.verificationCode %></span>
                                                    </div>
                                                <% } %>
                                                <div class="customer-info-row">
                                                    <i class="bi bi-phone"></i>
                                                    <span><%= customer.phoneNumber || customer.customerPhone || '-' %></span>
                                                </div>
                                                <div class="customer-info-row">
                                                    <i class="bi bi-people"></i>
                                                    <span><%= customer.partySize %> people</span>
                                                </div>
                                                <div class="customer-info-row">
                                                    <i class="bi bi-clock"></i>
                                                    <span><%= waitMinutes %> min</span>
                                                </div>
                                                <% if (customer.specialRequests) { %>
                                                    <div class="customer-info-row">
                                                        <i class="bi bi-chat-text"></i>
                                                        <span><%= customer.specialRequests %></span>
                                                    </div>
                                                <% } %>
                                            </div>
                                            <div class="customer-card-actions">
                                                <% if (customer.status === 'called') { %>
                                                    <button onclick="showCodeVerificationModal('<%= activeQueue.id || activeQueue._id %>', '<%= customer._id || customer.id %>')" class="action-button" style="background: #28a745; color: white;">
                                                        <i class="bi bi-check-circle"></i> Seat Customer
                                                    </button>
                                                    <button onclick="revokeNotification('<%= activeQueue.id || activeQueue._id %>', '<%= customer._id || customer.id %>')" class="action-button btn-revoke">
                                                        <i class="bi bi-x-circle"></i> Cancel
                                                    </button>
                                                <% } else if (customer.status === 'waiting') { %>
                                                    <button onclick="callCustomer('<%= activeQueue.id || activeQueue._id %>', '<%= customer._id || customer.id %>', event)" class="action-button call-button">
                                                        <i class="bi bi-megaphone"></i> Call
                                                    </button>
                                                <% } %>
                                            </div>
                                        </div>
                                    <% }); %>
                                </div>
                            <% } else { %>
                                <div class="no-customers">
                                    <div class="empty-queue-icon">🍽️</div>
                                    <h4>No customers in queue</h4>
                                    <p>Your restaurant is ready to welcome the next customer!</p>
                                </div>
                            <% } %>
                        </div>
                    <% } else { %>
                        <!-- No active queue found -->
                        <div class="no-queue-section">
                            <div class="empty-state">
                                <div class="empty-icon">📋</div>
                                <h3>No Active Queue</h3>
                                <p>All queues are currently inactive. Start a queue to begin accepting customers.</p>
                                <a href="/dashboard/settings" class="btn btn-primary">
                                    <i class="bi bi-gear"></i> Manage Queues
                                </a>
                            </div>
                        </div>
                    <% } %>
                <% } else { %>
                    <!-- No queues exist -->
                    <div class="no-queue-section">
                        <div class="empty-state">
                            <div class="empty-icon">🚀</div>
                            <h3>No Queues Created</h3>
                            <p>Create your first queue to start managing customers.</p>
                            <a href="/dashboard/settings" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Create Queue
                            </a>
                        </div>
                    </div>
                <% } %>
            </div>
            
            <!-- Completed Customers Tab -->
            <div id="seated-customers" class="tab-content">
                <% if (queues.length > 0) { %>
                    <% const activeQueue = queues.find(queue => queue.isActive); %>
                    <% if (activeQueue) { %>
                        <% const seatedCustomers = activeQueue.entries.filter(entry => entry.status === 'completed').sort((a, b) => new Date(b.completedAt) - new Date(a.completedAt)); %>
                        
                        <% if (seatedCustomers.length > 0) { %>
                            <div class="customer-list">
                                <div class="customer-list-header">
                                    <span>PAX</span>
                                    <span>Phone</span>
                                    <span>Name</span>
                                    <span>Join Time</span>
                                    <span>Wait Time</span>
                                    <span>Notified</span>
                                    <span>Acknowledged</span>
                                    <span>Show Up</span>
                                    <span>Total Time</span>
                                    <span>Status</span>
                                    <span>Actions</span>
                                </div>
                                
                                <% seatedCustomers.forEach((customer) => { %>
                                    <% 
                                        // Helper function to format time
                                        const formatTime = (date) => {
                                            if (!date) return '-';
                                            const d = new Date(date);
                                            return d.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
                                        };
                                        
                                        // Calculate time differences
                                        const joinTime = new Date(customer.joinedAt);
                                        const callTime = customer.calledAt ? new Date(customer.calledAt) : null;
                                        const ackTime = customer.acknowledgedAt ? new Date(customer.acknowledgedAt) : null;
                                        const showUpTime = customer.servedAt ? new Date(customer.servedAt) : (customer.completedAt ? new Date(customer.completedAt) : null);
                                        
                                        // Calculate durations in minutes
                                        const waitMinutes = callTime ? Math.floor((callTime - joinTime) / (1000 * 60)) : 0;
                                        const totalMinutes = showUpTime ? Math.floor((showUpTime - joinTime) / (1000 * 60)) : 0;
                                        
                                        // Determine status display
                                        const statusDisplay = 'COMPLETED';
                                    %>
                                    <div class="customer-row seated-customer-row">
                                        <div class="party-size" style="text-align: center;"><%= customer.partySize %></div>
                                        <div class="phone"><%= customer.customerPhone %></div>
                                        <div class="customer-name"><%= customer.customerName %></div>
                                        <div class="time-column" title="Joined at <%= formatTime(customer.joinedAt) %>">
                                            <%= formatTime(customer.joinedAt) %>
                                        </div>
                                        <div class="time-column">
                                            <span class="time-duration <%= waitMinutes > 30 ? 'long-wait' : (waitMinutes < 10 ? 'good-time' : '') %>">
                                                <%= waitMinutes %> min
                                            </span>
                                        </div>
                                        <div class="time-column" title="<%= callTime ? 'Notified at ' + formatTime(callTime) : 'Not notified' %>">
                                            <%= formatTime(callTime) %>
                                        </div>
                                        <div class="time-column" title="<%= ackTime ? 'Acknowledged at ' + formatTime(ackTime) : 'Not acknowledged' %>">
                                            <%= formatTime(ackTime) %>
                                        </div>
                                        <div class="time-column" title="<%= showUpTime ? 'Showed up at ' + formatTime(showUpTime) : 'Time not recorded' %>">
                                            <%= formatTime(showUpTime) %>
                                        </div>
                                        <div class="time-column">
                                            <span class="time-duration <%= totalMinutes > 60 ? 'long-wait' : '' %>">
                                                <%= totalMinutes %> min
                                            </span>
                                        </div>
                                        <div class="status" style="text-align: center;">
                                            <span class="status-badge" style="background: #28a745; color: white; padding: 4px 8px; border-radius: 4px; font-size: 0.75rem;">
                                                <%= statusDisplay %>
                                            </span>
                                        </div>
                                        <div class="actions">
                                            <button class="btn-action btn-select" onclick="requeueCustomer('<%= activeQueue.id || activeQueue._id %>', '<%= customer._id || customer.id %>')">Requeue</button>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <div class="no-customers">
                                <div class="empty-queue-icon">🪑</div>
                                <h4>No seated customers</h4>
                                <p>Customers who are seated will appear here</p>
                            </div>
                        <% } %>
                    <% } else { %>
                        <div class="no-customers">
                            <h4>No active queue</h4>
                            <p>Activate a queue to see seated customers</p>
                        </div>
                    <% } %>
                <% } else { %>
                    <div class="no-customers">
                        <h4>No queues available</h4>
                        <p>Create a queue first to manage seated customers</p>
                    </div>
                <% } %>
            </div>
        </section>
    </main>

    <!-- Indicators -->
