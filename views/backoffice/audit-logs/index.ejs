<div class="container-fluid mt-4">
  <!-- Header with Gradient Background -->
  <div class="row mb-5">
    <div class="col-12">
      <div class="audit-header-card p-4 rounded-4 shadow-sm">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h2 class="mb-2 text-white fw-bold"><%= contentTitle %></h2>
            <p class="text-white-75 mb-0 fs-5"><%= contentSubtitle %></p>
          </div>
          <div class="d-flex gap-3">
            <button class="btn btn-light btn-lg rounded-3 px-4" onclick="exportAuditLogs()">
              <i class="fas fa-download me-2"></i>Export CSV
            </button>
            <button class="btn btn-outline-light btn-lg rounded-3 px-4" onclick="refreshStats()">
              <i class="fas fa-sync-alt me-2"></i>Refresh
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="row mb-5">
    <div class="col-12">
      <div class="modern-filter-card rounded-4 shadow-sm">
        <div class="p-4">
          <div class="d-flex align-items-center mb-4">
            <div class="filter-icon-bg me-3">
              <i class="fas fa-filter"></i>
            </div>
            <h6 class="mb-0 fw-bold text-dark">Filter Audit Logs</h6>
          </div>
          <form method="GET" class="row g-4">
            <div class="col-md-3">
              <label class="form-label fw-medium text-dark mb-2">Search</label>
              <input type="text" 
                     class="form-control modern-input rounded-3 py-3" 
                     name="search" 
                     value="<%= filters.search %>" 
                     placeholder="Action, entity, or user...">
            </div>
            <div class="col-md-2">
              <label class="form-label fw-medium text-dark mb-2">Action</label>
              <select class="form-select modern-select rounded-3 py-3" name="action">
                <option value="all" <%= filters.action === 'all' ? 'selected' : '' %>>All Actions</option>
                <% filterOptions.actions.forEach(action => { %>
                  <option value="<%= action %>" <%= filters.action === action ? 'selected' : '' %>>
                    <%= action %>
                  </option>
                <% }) %>
              </select>
            </div>
            <div class="col-md-2">
              <label class="form-label fw-medium text-dark mb-2">Entity</label>
              <select class="form-select modern-select rounded-3 py-3" name="entity">
                <option value="all" <%= filters.entity === 'all' ? 'selected' : '' %>>All Entities</option>
                <% filterOptions.entities.forEach(entity => { %>
                  <option value="<%= entity %>" <%= filters.entity === entity ? 'selected' : '' %>>
                    <%= entity %>
                  </option>
                <% }) %>
              </select>
            </div>
            <div class="col-md-2">
              <label class="form-label fw-medium text-dark mb-2">User</label>
              <select class="form-select modern-select rounded-3 py-3" name="user">
                <option value="all" <%= filters.user === 'all' ? 'selected' : '' %>>All Users</option>
                <% filterOptions.users.forEach(user => { %>
                  <option value="<%= user.id %>" <%= filters.user === user.id ? 'selected' : '' %>>
                    <%= user.name || user.email %>
                  </option>
                <% }) %>
              </select>
            </div>
            <div class="col-md-2">
              <label class="form-label fw-medium text-dark mb-2">Date From</label>
              <input type="date" 
                     class="form-control modern-input rounded-3 py-3" 
                     name="dateFrom" 
                     value="<%= filters.dateFrom %>">
            </div>
            <div class="col-md-1">
              <label class="form-label">&nbsp;</label>
              <div class="d-flex gap-2">
                <button type="submit" class="btn modern-btn-primary rounded-3 px-4 py-3">
                  <i class="fas fa-search"></i>
                </button>
                <a href="/backoffice/audit-logs" class="btn btn-outline-secondary rounded-3 px-4 py-3">
                  <i class="fas fa-times"></i>
                </a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="row mb-5" id="statsCards">
    <div class="col-md-3 mb-4">
      <div class="modern-stats-card rounded-4 shadow-sm p-4 h-100 primary-card">
        <div class="d-flex align-items-center justify-content-between">
          <div>
            <div class="stats-icon-bg primary-bg mb-3">
              <i class="fas fa-list-alt"></i>
            </div>
            <h6 class="text-muted mb-2 fw-medium">Total Logs</h6>
            <h3 class="mb-0 fw-bold text-dark" id="totalLogs">-</h3>
          </div>
          <div class="stats-trend">
            <div class="trend-circle primary-bg-light">
              <i class="fas fa-arrow-up text-primary"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3 mb-4">
      <div class="modern-stats-card rounded-4 shadow-sm p-4 h-100 success-card">
        <div class="d-flex align-items-center justify-content-between">
          <div>
            <div class="stats-icon-bg success-bg mb-3">
              <i class="fas fa-chart-line"></i>
            </div>
            <h6 class="text-muted mb-2 fw-medium">Top Action</h6>
            <h5 class="mb-0 fw-bold text-dark" id="topAction">-</h5>
          </div>
          <div class="stats-trend">
            <div class="trend-circle success-bg-light">
              <i class="fas fa-fire text-success"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3 mb-4">
      <div class="modern-stats-card rounded-4 shadow-sm p-4 h-100 info-card">
        <div class="d-flex align-items-center justify-content-between">
          <div>
            <div class="stats-icon-bg info-bg mb-3">
              <i class="fas fa-database"></i>
            </div>
            <h6 class="text-muted mb-2 fw-medium">Top Entity</h6>
            <h5 class="mb-0 fw-bold text-dark" id="topEntity">-</h5>
          </div>
          <div class="stats-trend">
            <div class="trend-circle info-bg-light">
              <i class="fas fa-cube text-info"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3 mb-4">
      <div class="modern-stats-card rounded-4 shadow-sm p-4 h-100 warning-card">
        <div class="d-flex align-items-center justify-content-between">
          <div>
            <div class="stats-icon-bg warning-bg mb-3">
              <i class="fas fa-user"></i>
            </div>
            <h6 class="text-muted mb-2 fw-medium">Most Active User</h6>
            <h5 class="mb-0 fw-bold text-dark" id="topUser">-</h5>
          </div>
          <div class="stats-trend">
            <div class="trend-circle warning-bg-light">
              <i class="fas fa-crown text-warning"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Audit Logs Table -->
  <div class="row">
    <div class="col-12">
      <div class="modern-table-card rounded-4 shadow-sm">
        <div class="table-header p-4 border-bottom">
          <div class="d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
              <div class="table-icon-bg me-3">
                <i class="fas fa-table"></i>
              </div>
              <h5 class="mb-0 fw-bold text-dark">Audit Log Entries</h5>
            </div>
            <div class="table-actions">
              <span class="badge modern-badge bg-light text-dark">
                <i class="fas fa-list me-1"></i>
                <span id="tableCount"><%= auditLogs.length %></span> entries
              </span>
            </div>
          </div>
        </div>
        <div class="table-body p-0">
          <% if (auditLogs.length === 0) { %>
            <div class="empty-state text-center py-5 px-4">
              <div class="empty-icon-bg mx-auto mb-4">
                <i class="fas fa-search"></i>
              </div>
              <h5 class="fw-bold text-dark mb-2">No audit logs found</h5>
              <p class="text-muted mb-4">
                <% if (filters.search || filters.action !== 'all' || filters.entity !== 'all' || filters.user !== 'all' || filters.dateFrom || filters.dateTo) { %>
                  Try adjusting your filters to see more results
                <% } else { %>
                  No audit logs are available at this time
                <% } %>
              </p>
              <% if (filters.search || filters.action !== 'all' || filters.entity !== 'all' || filters.user !== 'all' || filters.dateFrom || filters.dateTo) { %>
                <a href="/backoffice/audit-logs" class="btn modern-btn-primary rounded-3 px-4">
                  <i class="fas fa-refresh me-2"></i>Clear Filters
                </a>
              <% } %>
            </div>
          <% } else { %>
            <div class="table-responsive">
              <table class="table modern-table mb-0">
                <thead class="modern-table-head">
                  <tr>
                    <th class="fw-bold text-dark">Timestamp</th>
                    <th class="fw-bold text-dark">Action</th>
                    <th class="fw-bold text-dark">Entity</th>
                    <th class="fw-bold text-dark">User</th>
                    <th class="fw-bold text-dark">IP Address</th>
                    <th class="fw-bold text-dark">Details</th>
                    <th class="fw-bold text-dark">Actions</th>
                  </tr>
                </thead>
                <tbody class="modern-table-body">
                  <% auditLogs.forEach(log => { %>
                    <tr class="modern-table-row">
                      <td class="align-middle">
                        <div class="timestamp-wrapper">
                          <div class="fw-bold text-dark"><%= new Date(log.createdAt).toLocaleDateString() %></div>
                          <small class="text-muted"><%= new Date(log.createdAt).toLocaleTimeString() %></small>
                        </div>
                      </td>
                      <td class="align-middle">
                        <span class="modern-action-badge badge-<%= 
                          log.action.includes('create') ? 'success' :
                          log.action.includes('update') ? 'warning' :
                          log.action.includes('delete') ? 'danger' :
                          log.action.includes('login') ? 'info' : 'secondary'
                        %>">
                          <i class="fas fa-<%= 
                            log.action.includes('create') ? 'plus' :
                            log.action.includes('update') ? 'edit' :
                            log.action.includes('delete') ? 'trash' :
                            log.action.includes('login') ? 'sign-in-alt' : 'cog'
                          %> me-1"></i>
                          <%= log.action %>
                        </span>
                      </td>
                      <td class="align-middle">
                        <div class="entity-info">
                          <div class="fw-bold text-dark"><%= log.resource %></div>
                          <% if (log.resourceId) { %>
                            <small class="text-muted d-flex align-items-center mt-1">
                              <i class="fas fa-fingerprint me-1"></i>
                              <%= log.resourceId %>
                            </small>
                          <% } %>
                        </div>
                      </td>
                      <td class="align-middle">
                        <% if (log.userId) { %>
                          <div class="user-info">
                            <div class="d-flex align-items-center">
                              <div class="user-avatar me-2">
                                <i class="fas fa-user"></i>
                              </div>
                              <small class="text-dark fw-medium"><%= log.userId %></small>
                            </div>
                          </div>
                        <% } else { %>
                          <div class="d-flex align-items-center">
                            <div class="system-avatar me-2">
                              <i class="fas fa-robot"></i>
                            </div>
                            <span class="text-muted fw-medium">System</span>
                          </div>
                        <% } %>
                      </td>
                      <td class="align-middle">
                        <div class="ip-address">
                          <i class="fas fa-globe-americas me-1 text-muted"></i>
                          <small class="text-muted fw-medium"><%= log.ipAddress || 'N/A' %></small>
                        </div>
                      </td>
                      <td class="align-middle">
                        <% if (log.details && typeof log.details === 'object') { %>
                          <div class="details-info">
                            <span class="details-badge">
                              <i class="fas fa-info-circle me-1"></i>
                              <% if (log.details.changes) { %>
                                <%= Object.keys(log.details.changes).length %> changes
                              <% } else { %>
                                <%= Object.keys(log.details).length %> details
                              <% } %>
                            </span>
                          </div>
                        <% } else { %>
                          <small class="text-muted">-</small>
                        <% } %>
                      </td>
                      <td class="align-middle">
                        <a href="/backoffice/audit-logs/<%= log.id %>" 
                           class="btn modern-view-btn rounded-3"
                           title="View Details">
                          <i class="fas fa-eye me-1"></i>
                          View
                        </a>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>

            <!-- Pagination -->
            <% if (pagination.pages > 1) { %>
              <nav aria-label="Audit logs pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                  <li class="page-item <%= !pagination.hasPrev ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= pagination.page - 1 %>&search=<%= filters.search %>&action=<%= filters.action %>&entity=<%= filters.entity %>&user=<%= filters.user %>&dateFrom=<%= filters.dateFrom %>&dateTo=<%= filters.dateTo %>">
                      Previous
                    </a>
                  </li>
                  <% for (let i = Math.max(1, pagination.page - 2); i <= Math.min(pagination.pages, pagination.page + 2); i++) { %>
                    <li class="page-item <%= i === pagination.page ? 'active' : '' %>">
                      <a class="page-link" href="?page=<%= i %>&search=<%= filters.search %>&action=<%= filters.action %>&entity=<%= filters.entity %>&user=<%= filters.user %>&dateFrom=<%= filters.dateFrom %>&dateTo=<%= filters.dateTo %>">
                        <%= i %>
                      </a>
                    </li>
                  <% } %>
                  <li class="page-item <%= !pagination.hasNext ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= pagination.page + 1 %>&search=<%= filters.search %>&action=<%= filters.action %>&entity=<%= filters.entity %>&user=<%= filters.user %>&dateFrom=<%= filters.dateFrom %>&dateTo=<%= filters.dateTo %>">
                      Next
                    </a>
                  </li>
                </ul>
              </nav>
            <% } %>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Load statistics on page load
document.addEventListener('DOMContentLoaded', function() {
  loadStats();
});

async function loadStats() {
  try {
    const response = await fetch('/backoffice/audit-logs/api/stats?period=7d');
    const stats = await response.json();
    
    document.getElementById('totalLogs').textContent = stats.total.toLocaleString();
    
    if (stats.actions.length > 0) {
      document.getElementById('topAction').textContent = stats.actions[0].action;
    }
    
    if (stats.entities.length > 0) {
      document.getElementById('topEntity').textContent = stats.entities[0].resource;
    }
    
    if (stats.topUsers.length > 0) {
      const topUser = stats.topUsers[0].userId || 'System';
      document.getElementById('topUser').textContent = topUser.length > 20 ? topUser.substring(0, 20) + '...' : topUser;
    }
  } catch (error) {
    console.error('Failed to load stats:', error);
  }
}

function refreshStats() {
  loadStats();
}

function exportAuditLogs() {
  const params = new URLSearchParams(window.location.search);
  window.location.href = '/backoffice/audit-logs/export/csv?' + params.toString();
}
</script>

