});

// Test email configuration
async function testEmailConfiguration() {
  const testEmail = prompt('Enter email address to send test email to:');
  if (!testEmail) return;
  
  const btn = event.target;
  const originalText = btn.innerHTML;
  btn.disabled = true;
  btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status"></span>Sending...';
  
  try {
    const response = await fetch('/backoffice/settings/email/test', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': '<%= csrfToken %>'
      },
      body: JSON.stringify({ testEmail })
    });
    
    const result = await response.json();
    
    if (response.ok) {
      alert('Test email sent successfully! Check your inbox.');
    } else {
      alert('Failed to send test email: ' + (result.error || 'Unknown error'));
    }
  } catch (error) {
    alert('Failed to send test email: ' + error.message);
  } finally {
    btn.disabled = false;
    btn.innerHTML = originalText;
  }
}
