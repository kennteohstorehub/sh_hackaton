<div class="container-fluid mt-4">
  <!-- Header with Gradient Background -->
  <div class="row mb-5">
    <div class="col-12">
      <div class="header-card p-4 rounded-4 shadow-sm">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h2 class="mb-2 text-white"><%= contentTitle %></h2>
            <p class="text-white-75 mb-0 fs-5"><%= contentSubtitle %></p>
          </div>
          <div>
            <button class="btn btn-light btn-lg rounded-3 px-4" onclick="refreshSystemStats()">
              <i class="fas fa-sync-alt me-2"></i>Refresh Stats
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Settings Navigation -->
    <div class="col-md-3">
      <div class="modern-nav-card rounded-4 shadow-sm p-3">
        <h6 class="nav-title mb-4 text-muted fw-bold">SETTINGS</h6>
        <div class="nav flex-column nav-pills modern-nav" id="settingsTab" role="tablist">
          <button class="nav-link active rounded-3 mb-2" id="profile-tab" data-bs-toggle="pill" data-bs-target="#profile" type="button" role="tab">
            <div class="d-flex align-items-center">
              <div class="nav-icon-bg me-3">
                <i class="fas fa-user"></i>
              </div>
              <span class="fw-medium">Profile</span>
            </div>
          </button>
          <button class="nav-link rounded-3 mb-2" id="system-tab" data-bs-toggle="pill" data-bs-target="#system" type="button" role="tab">
            <div class="d-flex align-items-center">
              <div class="nav-icon-bg me-3">
                <i class="fas fa-cogs"></i>
              </div>
              <span class="fw-medium">System Settings</span>
            </div>
          </button>
          <button class="nav-link rounded-3 mb-2" id="security-tab" data-bs-toggle="pill" data-bs-target="#security" type="button" role="tab">
            <div class="d-flex align-items-center">
              <div class="nav-icon-bg me-3">
                <i class="fas fa-shield-alt"></i>
              </div>
              <span class="fw-medium">Security</span>
            </div>
          </button>
          <button class="nav-link rounded-3 mb-2" id="email-tab" data-bs-toggle="pill" data-bs-target="#email" type="button" role="tab">
            <div class="d-flex align-items-center">
              <div class="nav-icon-bg me-3">
                <i class="fas fa-envelope"></i>
              </div>
              <span class="fw-medium">Email Configuration</span>
            </div>
          </button>
          <button class="nav-link rounded-3 mb-2" id="notifications-tab" data-bs-toggle="pill" data-bs-target="#notifications" type="button" role="tab">
            <div class="d-flex align-items-center">
              <div class="nav-icon-bg me-3">
                <i class="fas fa-bell"></i>
              </div>
              <span class="fw-medium">Notifications</span>
            </div>
          </button>
          <button class="nav-link rounded-3 mb-2" id="stats-tab" data-bs-toggle="pill" data-bs-target="#stats" type="button" role="tab">
            <div class="d-flex align-items-center">
              <div class="nav-icon-bg me-3">
                <i class="fas fa-chart-bar"></i>
              </div>
              <span class="fw-medium">System Stats</span>
            </div>
          </button>
        </div>
      </div>
    </div>

    <!-- Settings Content -->
    <div class="col-md-9">
      <div class="tab-content" id="settingsTabContent">
        <!-- Profile Settings -->
        <div class="tab-pane fade show active" id="profile" role="tabpanel">
          <div class="modern-card rounded-4 shadow-sm">
            <div class="modern-card-header p-4 border-bottom-0">
              <div class="d-flex align-items-center">
                <div class="header-icon-bg me-3">
                  <i class="fas fa-user"></i>
                </div>
                <h5 class="mb-0 fw-bold">Profile Settings</h5>
              </div>
            </div>
            <div class="modern-card-body p-4">
              <form method="POST" action="/backoffice/settings/profile">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                
                <div class="row mb-4">
                  <div class="col-md-6">
                    <label class="form-label fw-medium text-dark mb-2">Name</label>
                    <input type="text" class="form-control modern-input rounded-3 py-3" name="name" value="<%= backOfficeUser.fullName %>" required>
                  </div>
                  <div class="col-md-6">
                    <label class="form-label fw-medium text-dark mb-2">Email</label>
                    <input type="email" class="form-control modern-input rounded-3 py-3" name="email" value="<%= backOfficeUser.email %>" required>
                  </div>
                </div>

                <div class="divider my-5"></div>

                <h6 class="mb-4 fw-bold text-dark d-flex align-items-center">
                  <i class="fas fa-key me-2 text-primary"></i>Change Password
                </h6>
                <div class="row mb-4">
                  <div class="col-md-4">
                    <label class="form-label fw-medium text-dark mb-2">Current Password</label>
                    <input type="password" class="form-control modern-input rounded-3 py-3" name="currentPassword" placeholder="Leave blank to keep current">
                  </div>
                  <div class="col-md-4">
                    <label class="form-label fw-medium text-dark mb-2">New Password</label>
                    <input type="password" class="form-control modern-input rounded-3 py-3" name="newPassword" placeholder="Minimum 8 characters">
                  </div>
                  <div class="col-md-4">
                    <label class="form-label fw-medium text-dark mb-2">Confirm New Password</label>
                    <input type="password" class="form-control modern-input rounded-3 py-3" name="confirmPassword" placeholder="Confirm new password">
                  </div>
                </div>

                <div class="modern-info-card rounded-3 p-4 mb-4">
                  <div class="d-flex align-items-start">
                    <div class="info-icon-bg me-3">
                      <i class="fas fa-info-circle"></i>
                    </div>
                    <div>
                      <h6 class="fw-bold mb-2">Account Information</h6>
                      <div class="info-item mb-2">
                        <span class="text-muted me-2">Account Type:</span>
                        <span class="badge modern-badge bg-primary">BackOffice User</span>
                      </div>
                      <div class="info-item mb-2">
                        <span class="text-muted me-2">Member since:</span>
                        <span class="fw-medium"><%= new Date(backOfficeUser.createdAt).toLocaleDateString() %></span>
                      </div>
                      <div class="info-item">
                        <span class="text-muted me-2">Last login:</span>
                        <span class="fw-medium"><%= backOfficeUser.lastLogin ? new Date(backOfficeUser.lastLogin).toLocaleString() : 'Never' %></span>
                      </div>
                    </div>
                  </div>
                </div>

                <button type="submit" class="btn modern-btn-primary rounded-3 px-4 py-3">
                  <i class="fas fa-save me-2"></i>Update Profile
                </button>
              </form>
            </div>
          </div>
        </div>

        <!-- System Settings -->
        <div class="tab-pane fade" id="system" role="tabpanel">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0"><i class="fas fa-cogs me-2"></i>System Settings</h5>
            </div>
            <div class="card-body">
              <form method="POST" action="/backoffice/settings/general">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                
                <div class="row mb-4">
                  <div class="col-md-6">
                    <label class="form-label">Site Name</label>
                    <input type="text" class="form-control" name="siteName" value="<%= generalSettings.siteName || 'QMS BackOffice' %>" required>
                  </div>
                  <div class="col-md-6">
                    <label class="form-label">Support Email</label>
                    <input type="email" class="form-control" name="supportEmail" value="<%= generalSettings.supportEmail || 'support@storehubqms.com' %>" required>
                  </div>
                </div>

                <div class="row mb-4">
                  <div class="col-md-6">
                    <label class="form-label">Timezone</label>
                    <select class="form-control" name="timezone">
                      <option value="Asia/Kuala_Lumpur" <%= generalSettings.timezone === 'Asia/Kuala_Lumpur' ? 'selected' : '' %>>Asia/Kuala_Lumpur (GMT+8)</option>
                      <option value="Asia/Singapore" <%= generalSettings.timezone === 'Asia/Singapore' ? 'selected' : '' %>>Asia/Singapore (GMT+8)</option>
                      <option value="Asia/Jakarta" <%= generalSettings.timezone === 'Asia/Jakarta' ? 'selected' : '' %>>Asia/Jakarta (GMT+7)</option>
                      <option value="Asia/Bangkok" <%= generalSettings.timezone === 'Asia/Bangkok' ? 'selected' : '' %>>Asia/Bangkok (GMT+7)</option>
                      <option value="Asia/Manila" <%= generalSettings.timezone === 'Asia/Manila' ? 'selected' : '' %>>Asia/Manila (GMT+8)</option>
                    </select>
                  </div>
                  <div class="col-md-6">
                    <label class="form-label">Language</label>
                    <select class="form-control" name="language">
                      <option value="en" <%= generalSettings.language === 'en' ? 'selected' : '' %>>English</option>
                      <option value="ms" <%= generalSettings.language === 'ms' ? 'selected' : '' %>>Bahasa Malaysia</option>
                      <option value="zh" <%= generalSettings.language === 'zh' ? 'selected' : '' %>>中文</option>
                    </select>
                  </div>
                </div>

                <div class="row mb-4">
                  <div class="col-md-6">
                    <label class="form-label">Date Format</label>
                    <select class="form-control" name="dateFormat">
                      <option value="DD/MM/YYYY" <%= generalSettings.dateFormat === 'DD/MM/YYYY' ? 'selected' : '' %>>DD/MM/YYYY</option>
                      <option value="MM/DD/YYYY" <%= generalSettings.dateFormat === 'MM/DD/YYYY' ? 'selected' : '' %>>MM/DD/YYYY</option>
                      <option value="YYYY-MM-DD" <%= generalSettings.dateFormat === 'YYYY-MM-DD' ? 'selected' : '' %>>YYYY-MM-DD</option>
                    </select>
                  </div>
                  <div class="col-md-6">
                    <label class="form-label">Time Format</label>
                    <select class="form-control" name="timeFormat">
                      <option value="12h" <%= generalSettings.timeFormat === '12h' ? 'selected' : '' %>>12-hour (AM/PM)</option>
                      <option value="24h" <%= generalSettings.timeFormat === '24h' ? 'selected' : '' %>>24-hour</option>
                    </select>
                  </div>
                </div>

                <div class="mb-4">
                  <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="maintenanceMode" id="maintenanceMode" <%= generalSettings.maintenanceMode ? 'checked' : '' %>>
                    <label class="form-check-label" for="maintenanceMode">
                      Enable maintenance mode
                    </label>
                    <small class="text-muted d-block">When enabled, only BackOffice users can access the system</small>
                  </div>
                </div>

                <button type="submit" class="btn btn-primary">
                  <i class="fas fa-save me-2"></i>Update General Settings
                </button>
              </form>
            </div>
          </div>
        </div>

        <!-- Security Settings -->
        <div class="tab-pane fade" id="security" role="tabpanel">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0"><i class="fas fa-shield-alt me-2"></i>Security Settings</h5>
            </div>
            <div class="card-body">
              <form method="POST" action="/backoffice/settings/security">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                
                <div class="row mb-4">
                  <div class="col-md-6">
                    <label class="form-label">Session Timeout (minutes)</label>
                    <input type="number" class="form-control" name="sessionTimeout" value="<%= securitySettings.sessionTimeout || 480 %>" min="15" max="1440">
                    <small class="text-muted">15-1440 minutes (24 hours max)</small>
                  </div>
                  <div class="col-md-6">
                    <div class="form-check mt-4">
                      <input type="checkbox" class="form-check-input" name="requireTwoFactor" id="requireTwoFactor" <%= securitySettings.requireTwoFactor ? 'checked' : '' %>>
                      <label class="form-check-label" for="requireTwoFactor">
                        Require Two-Factor Authentication
                      </label>
                    </div>
                  </div>
                </div>

                <div class="row mb-4">
                  <div class="col-md-12">
                    <h6 class="mb-3">Password Requirements</h6>
                    <div class="row">
                      <div class="col-md-3">
                        <label class="form-label">Minimum Length</label>
                        <input type="number" class="form-control" name="passwordMinLength" value="<%= securitySettings.passwordMinLength || 8 %>" min="6" max="50">
                      </div>
                      <div class="col-md-3">
                        <div class="form-check mt-4">
                          <input type="checkbox" class="form-check-input" name="passwordRequireNumbers" id="passwordRequireNumbers" <%= securitySettings.passwordRequireNumbers !== false ? 'checked' : '' %>>
                          <label class="form-check-label" for="passwordRequireNumbers">
                            Require numbers
                          </label>
                        </div>
                      </div>
                      <div class="col-md-3">
                        <div class="form-check mt-4">
                          <input type="checkbox" class="form-check-input" name="passwordRequireSymbols" id="passwordRequireSymbols" <%= securitySettings.passwordRequireSymbols ? 'checked' : '' %>>
                          <label class="form-check-label" for="passwordRequireSymbols">
                            Require symbols
                          </label>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="row mb-4">
                  <div class="col-md-6">
                    <label class="form-label">Max Login Attempts</label>
                    <input type="number" class="form-control" name="maxLoginAttempts" value="<%= securitySettings.maxLoginAttempts || 5 %>" min="3" max="20">
                  </div>
                  <div class="col-md-6">
                    <label class="form-label">Lockout Duration (minutes)</label>
                    <input type="number" class="form-control" name="lockoutDuration" value="<%= securitySettings.lockoutDuration || 30 %>" min="5" max="1440">
                  </div>
                </div>

                <div class="mb-4">
                  <label class="form-label">Allowed IP Ranges (optional)</label>
                  <textarea class="form-control" name="allowedIpRanges" rows="3" placeholder="192.168.1.0/24&#10;10.0.0.0/8"><%= securitySettings.allowedIpRanges || '' %></textarea>
                  <small class="text-muted">One IP range per line. Leave empty to allow all IPs.</small>
                </div>

                <button type="submit" class="btn btn-primary">
                  <i class="fas fa-save me-2"></i>Update Security Settings
                </button>
              </form>
            </div>
          </div>
        </div>

        <!-- Email Configuration -->
        <div class="tab-pane fade" id="email" role="tabpanel">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0"><i class="fas fa-envelope me-2"></i>Email Configuration</h5>
            </div>
            <div class="card-body">
              <form method="POST" action="/backoffice/settings/email" id="emailConfigForm">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                
                <div class="row mb-4">
                  <div class="col-md-12">
                    <label class="form-label">Email Provider</label>
                    <select class="form-control" name="provider" id="emailProvider" required>
                      <option value="smtp" <%= emailSettings.provider === 'smtp' ? 'selected' : '' %>>SMTP</option>
                      <option value="sendgrid" <%= emailSettings.provider === 'sendgrid' ? 'selected' : '' %>>SendGrid</option>
                      <option value="ses" <%= emailSettings.provider === 'ses' ? 'selected' : '' %>>Amazon SES</option>
                    </select>
                  </div>
                </div>

                <div class="row mb-4">
                  <div class="col-md-6">
                    <label class="form-label">From Name <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="fromName" value="<%= emailSettings.fromName || 'QMS BackOffice' %>" required>
                  </div>
                  <div class="col-md-6">
                    <label class="form-label">From Email <span class="text-danger">*</span></label>
                    <input type="email" class="form-control" name="fromEmail" value="<%= emailSettings.fromEmail || 'noreply@storehubqms.com' %>" required>
                  </div>
                </div>

                <!-- SMTP Settings -->
                <div id="smtpSettings" class="provider-settings" style="<%= emailSettings.provider !== 'smtp' ? 'display: none;' : '' %>">
                  <h6 class="mb-3">SMTP Settings</h6>
                  <div class="row mb-3">
                    <div class="col-md-8">
                      <label class="form-label">SMTP Host</label>
                      <input type="text" class="form-control" name="smtpHost" value="<%= emailSettings.smtpHost || '' %>" placeholder="smtp.gmail.com">
                    </div>
                    <div class="col-md-4">
                      <label class="form-label">SMTP Port</label>
                      <input type="number" class="form-control" name="smtpPort" value="<%= emailSettings.smtpPort || 587 %>" min="1" max="65535">
                    </div>
                  </div>
                  <div class="row mb-3">
                    <div class="col-md-6">
                      <label class="form-label">SMTP Username</label>
                      <input type="text" class="form-control" name="smtpUser" value="<%= emailSettings.smtpUser || '' %>">
                    </div>
                    <div class="col-md-6">
                      <label class="form-label">SMTP Password</label>
                      <input type="password" class="form-control" name="smtpPassword" placeholder="Leave blank to keep current">
                    </div>
                  </div>
                  <div class="mb-3">
                    <div class="form-check">
                      <input type="checkbox" class="form-check-input" name="smtpSecure" id="smtpSecure" <%= emailSettings.smtpSecure ? 'checked' : '' %>>
                      <label class="form-check-label" for="smtpSecure">
                        Use TLS/SSL
                      </label>
                    </div>
                  </div>
                </div>

                <!-- SendGrid Settings -->
                <div id="sendgridSettings" class="provider-settings" style="<%= emailSettings.provider !== 'sendgrid' ? 'display: none;' : '' %>">
                  <h6 class="mb-3">SendGrid Settings</h6>
                  <div class="mb-3">
                    <label class="form-label">SendGrid API Key</label>
                    <input type="password" class="form-control" name="sendgridApiKey" placeholder="SG.xxxxxxxxxxxxxxxxxxxx">
                    <small class="text-muted">Get your API key from <a href="https://app.sendgrid.com/settings/api_keys" target="_blank">SendGrid Dashboard</a></small>
                  </div>
                </div>

                <!-- AWS SES Settings -->
                <div id="sesSettings" class="provider-settings" style="<%= emailSettings.provider !== 'ses' ? 'display: none;' : '' %>">
                  <h6 class="mb-3">Amazon SES Settings</h6>
                  <div class="row mb-3">
                    <div class="col-md-6">
                      <label class="form-label">AWS Access Key ID</label>
                      <input type="text" class="form-control" name="awsAccessKeyId" value="<%= emailSettings.awsAccessKeyId || '' %>">
                    </div>
                    <div class="col-md-6">
                      <label class="form-label">AWS Secret Access Key</label>
                      <input type="password" class="form-control" name="awsSecretAccessKey" placeholder="Leave blank to keep current">
                    </div>
                  </div>
                  <div class="mb-3">
                    <label class="form-label">AWS Region</label>
                    <select class="form-control" name="awsRegion">
                      <option value="us-east-1" <%= emailSettings.awsRegion === 'us-east-1' ? 'selected' : '' %>>US East (N. Virginia)</option>
                      <option value="us-west-2" <%= emailSettings.awsRegion === 'us-west-2' ? 'selected' : '' %>>US West (Oregon)</option>
                      <option value="eu-west-1" <%= emailSettings.awsRegion === 'eu-west-1' ? 'selected' : '' %>>EU (Ireland)</option>
                      <option value="ap-southeast-1" <%= emailSettings.awsRegion === 'ap-southeast-1' ? 'selected' : '' %>>Asia Pacific (Singapore)</option>
                    </select>
                  </div>
                </div>

                <hr class="my-4">

                <div class="row">
                  <div class="col-md-6">
                    <button type="submit" class="btn btn-primary">
                      <i class="fas fa-save me-2"></i>Update Email Settings
                    </button>
                  </div>
                  <div class="col-md-6 text-end">
                    <button type="button" class="btn btn-outline-secondary" onclick="testEmailConfiguration()">
                      <i class="fas fa-paper-plane me-2"></i>Send Test Email
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>

        <!-- Notification Settings -->
        <div class="tab-pane fade" id="notifications" role="tabpanel">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0"><i class="fas fa-bell me-2"></i>Notification Settings</h5>
            </div>
            <div class="card-body">
              <form method="POST" action="/backoffice/settings/notifications">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                
                <div class="row mb-4">
                  <div class="col-md-12">
                    <h6 class="mb-3">General Notifications</h6>
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-check">
                          <input type="checkbox" class="form-check-input" name="emailEnabled" id="emailEnabled" <%= notificationSettings.emailEnabled !== false ? 'checked' : '' %>>
                          <label class="form-check-label" for="emailEnabled">
                            Enable email notifications
                          </label>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="row mb-4">
                  <div class="col-md-12">
                    <h6 class="mb-3">Alert Types</h6>
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-check">
                          <input type="checkbox" class="form-check-input" name="newTenantAlert" id="newTenantAlert" <%= notificationSettings.newTenantAlert !== false ? 'checked' : '' %>>
                          <label class="form-check-label" for="newTenantAlert">
                            New tenant registrations
                          </label>
                        </div>
                        <div class="form-check">
                          <input type="checkbox" class="form-check-input" name="systemAlert" id="systemAlert" <%= notificationSettings.systemAlert !== false ? 'checked' : '' %>>
                          <label class="form-check-label" for="systemAlert">
                            System alerts and errors
                          </label>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-check">
                          <input type="checkbox" class="form-check-input" name="securityAlert" id="securityAlert" <%= notificationSettings.securityAlert !== false ? 'checked' : '' %>>
                          <label class="form-check-label" for="securityAlert">
                            Security alerts
                          </label>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="row mb-4">
                  <div class="col-md-12">
                    <h6 class="mb-3">Reports</h6>
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-check">
                          <input type="checkbox" class="form-check-input" name="weeklyReport" id="weeklyReport" <%= notificationSettings.weeklyReport ? 'checked' : '' %>>
                          <label class="form-check-label" for="weeklyReport">
                            Weekly activity reports
                          </label>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-check">
                          <input type="checkbox" class="form-check-input" name="monthlyReport" id="monthlyReport" <%= notificationSettings.monthlyReport !== false ? 'checked' : '' %>>
                          <label class="form-check-label" for="monthlyReport">
                            Monthly summary reports
                          </label>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <button type="submit" class="btn btn-primary">
                  <i class="fas fa-save me-2"></i>Update Notification Settings
                </button>
              </form>
            </div>
          </div>
        </div>

        <!-- System Statistics -->
        <div class="tab-pane fade" id="stats" role="tabpanel">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>System Statistics</h5>
            </div>
            <div class="card-body">
              <div id="systemStatsContent">
                <div class="text-center py-4">
                  <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                  </div>
                  <p class="mt-2">Loading system statistics...</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Load system stats when tab is activated
document.addEventListener('DOMContentLoaded', function() {
  const statsTab = document.getElementById('stats-tab');
  const statsTabPane = document.getElementById('stats');
  
  statsTab.addEventListener('shown.bs.tab', function() {
    loadSystemStats();
  });
});

async function loadSystemStats() {
  try {
    const response = await fetch('/backoffice/settings/api/stats');
    const stats = await response.json();
    
    const content = `
      <div class="row mb-4">
