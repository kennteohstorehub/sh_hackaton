  }

  .resource-icon {
    font-size: 2rem;
  }

  .resource-label {
    font-size: 0.875rem;
    color: #475569;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .welcome-container {
      padding: 1rem;
    }

