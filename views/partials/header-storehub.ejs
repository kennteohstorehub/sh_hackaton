<!-- StoreHub Design System Header -->
<link rel="stylesheet" href="/css/storehub-design-system.css?v=<%= Date.now() %>">
<link rel="stylesheet" href="/css/storehub-header.css?v=<%= Date.now() %>">
<script src="/js/storehub-design-system.js?v=<%= Date.now() %>"></script>

<header class="storehub-header">
    <div class="storehub-header-content">
        <!-- Brand Section -->
        <div class="storehub-brand-section">
            <a href="/dashboard" class="storehub-logo">StoreHub QMS</a>
            <% if (typeof tenant !== 'undefined' && tenant && tenant.name) { %>
            <div class="storehub-tenant-badge">
                <span class="storehub-tenant-label">Account</span>
                <span class="storehub-tenant-name"><%= tenant.name %></span>
            </div>
            <% } %>
        </div>

        <!-- Navigation -->
        <nav class="storehub-nav">
            <a href="/dashboard" class="storehub-nav-link <%= typeof activePage !== 'undefined' && activePage === 'dashboard' ? 'active' : '' %>">
                Dashboard
            </a>
            <a href="/dashboard/analytics" class="storehub-nav-link <%= typeof activePage !== 'undefined' && activePage === 'analytics' ? 'active' : '' %>">
                Analytics
            </a>
            <a href="/dashboard/settings" class="storehub-nav-link <%= typeof activePage !== 'undefined' && activePage === 'settings' ? 'active' : '' %>">
                Settings
            </a>
            <a href="/dashboard/help" class="storehub-nav-link <%= typeof activePage !== 'undefined' && activePage === 'help' ? 'active' : '' %>">
                Help
            </a>
        </nav>

        <!-- User Section -->
        <div class="storehub-user-section">
            <% if (typeof showViewPublic !== 'undefined' && showViewPublic && typeof currentQueueId !== 'undefined') { %>
            <a href="/queue/<%= currentQueueId %>" class="storehub-view-public-btn" target="_blank">
                <svg class="storehub-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
                View Public
            </a>
            <% } %>
            
            <div class="storehub-user-dropdown">
                <button class="storehub-user-button">
                    <div class="storehub-user-avatar">
                        <%= typeof user !== 'undefined' && user && user.businessName ? user.businessName.charAt(0).toUpperCase() : 'U' %>
                    </div>
                    <span><%= typeof user !== 'undefined' && user ? (user.businessName || user.email) : 'User' %></span>
                    <svg class="storehub-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button>
                
                <div class="storehub-dropdown-menu">
                    <% if (typeof user !== 'undefined' && user) { %>
                    <a href="/dashboard/profile" class="storehub-dropdown-item">
                        <svg class="storehub-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        Profile
                    </a>
                    <a href="/dashboard/settings" class="storehub-dropdown-item">
                        <svg class="storehub-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        Settings
                    </a>
                    <% } %>
                    <div class="storehub-dropdown-divider"></div>
                    <form action="/auth/logout" method="POST" style="margin: 0;">
                        <%- csrfInput() %>
                        <button type="submit" class="storehub-dropdown-item" style="width: 100%; border: none; background: none; text-align: left; cursor: pointer;">
                            <svg class="storehub-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                            </svg>
                            Logout
                        </button>
                    </form>
                </div>
            </div>
            
            <!-- Mobile Menu Toggle -->
            <button class="storehub-mobile-toggle" onclick="toggleMobileNav()">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </div>
    
    <!-- Mobile Navigation -->
    <nav class="storehub-mobile-nav" id="mobileNav">
        <a href="/dashboard" class="storehub-mobile-nav-link <%= typeof activePage !== 'undefined' && activePage === 'dashboard' ? 'active' : '' %>">
            Dashboard
        </a>
        <a href="/dashboard/analytics" class="storehub-mobile-nav-link <%= typeof activePage !== 'undefined' && activePage === 'analytics' ? 'active' : '' %>">
            Analytics
        </a>
        <a href="/dashboard/settings" class="storehub-mobile-nav-link <%= typeof activePage !== 'undefined' && activePage === 'settings' ? 'active' : '' %>">
            Settings
        </a>
        <a href="/dashboard/help" class="storehub-mobile-nav-link <%= typeof activePage !== 'undefined' && activePage === 'help' ? 'active' : '' %>">
            Help
        </a>
        <% if (typeof showViewPublic !== 'undefined' && showViewPublic && typeof currentQueueId !== 'undefined') { %>
        <a href="/queue/<%= currentQueueId %>" class="storehub-mobile-nav-link" target="_blank">
            View Public Queue
        </a>
        <% } %>
    </nav>
</header>

<script>
function toggleMobileNav() {
    const mobileNav = document.getElementById('mobileNav');
    mobileNav.classList.toggle('active');
}

// Close mobile nav when clicking outside
document.addEventListener('click', function(event) {
    const mobileNav = document.getElementById('mobileNav');
    const mobileToggle = document.querySelector('.storehub-mobile-toggle');
    
    if (!mobileNav.contains(event.target) && !mobileToggle.contains(event.target)) {
        mobileNav.classList.remove('active');
    }
});
</script>