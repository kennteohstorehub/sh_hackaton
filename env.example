# Server Configuration
PORT=3001
NODE_ENV=development

# PostgreSQL Database (Required)
DATABASE_URL=postgresql://[user]:[password]@[neon-hostname]/[database]?sslmode=require
# Direct connection for migrations
DATABASE_URL_DIRECT=postgresql://[user]:[password]@[neon-hostname]/[database]?sslmode=require

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here

# WhatsApp Configuration (Legacy - Docker/VPS only)
WHATSAPP_SESSION_PATH=./whatsapp-session
ENABLE_WHATSAPP_WEB=false

# Telegram Bot (Recommended for Render)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-from-botfather
APP_URL=https://your-app.onrender.com

# Twilio (WhatsApp Business API & SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
TWILIO_SMS_NUMBER=+1234567890


# AI Services (Optional - for enhanced features)
OPENAI_API_KEY=your-openai-api-key
SENTIMENT_API_KEY=your-sentiment-analysis-api-key

# Notification Settings
NOTIFICATION_INTERVAL_MINUTES=5
MAX_QUEUE_SIZE=100

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 