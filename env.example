# Server Configuration
PORT=3001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/smart-queue-manager

# Neon PostgreSQL Database (for production)
DATABASE_URL=postgresql://[user]:[password]@[neon-hostname]/[database]?sslmode=require
# Direct connection for migrations
DATABASE_URL_DIRECT=postgresql://[user]:[password]@[neon-hostname]/[database]?sslmode=require

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./whatsapp-session

# Facebook Messenger Configuration
FB_PAGE_ACCESS_TOKEN=your-facebook-page-access-token
FB_VERIFY_TOKEN=your-facebook-verify-token
FB_APP_SECRET=your-facebook-app-secret

# AI Services (Optional - for enhanced features)
OPENAI_API_KEY=your-openai-api-key
SENTIMENT_API_KEY=your-sentiment-analysis-api-key

# Notification Settings
NOTIFICATION_INTERVAL_MINUTES=5
MAX_QUEUE_SIZE=100

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 