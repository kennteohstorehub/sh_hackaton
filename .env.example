# Server Configuration
PORT=3001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/smart-queue-manager

# Neon PostgreSQL Database (for production)
# Get your connection strings from: https://console.neon.tech/
DATABASE_URL=postgresql://[user]:[password]@[neon-hostname]/[database]?sslmode=require
# Direct connection for migrations (bypasses pooler)
DATABASE_URL_DIRECT=postgresql://[user]:[password]@[neon-hostname]/[database]?sslmode=require

# Security Keys (REQUIRED - Generate strong secrets!)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-here-min-32-chars
SESSION_SECRET=your-session-secret-here-min-32-chars

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./whatsapp-session
WHATSAPP_ENFORCE_WHITELIST=true
WHATSAPP_PRODUCTION_MODE=false
# Comma-separated list of allowed phone numbers (with country code)
WHATSAPP_ALLOWED_NUMBERS=60123456789,60987654321

# Facebook Messenger Configuration
# Get from: https://developers.facebook.com/
FB_PAGE_ACCESS_TOKEN=your-facebook-page-access-token
FB_VERIFY_TOKEN=your-facebook-verify-token
FB_APP_SECRET=your-facebook-app-secret

# AI Services (Optional - for enhanced features)
OPENAI_API_KEY=your-openai-api-key
SENTIMENT_API_KEY=your-sentiment-analysis-api-key

# Notification Settings
NOTIFICATION_INTERVAL_MINUTES=5
MAX_QUEUE_SIZE=100

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Puppeteer (Optional - for custom Chrome/Chromium path)
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Email Configuration (Optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Error Tracking (Optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Redis (Optional - for future session storage)
# REDIS_URL=redis://localhost:6379