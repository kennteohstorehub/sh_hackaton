# Test Environment Configuration
# Copy this file to .env and fill in your test credentials

# Base URL for tests
BASE_URL=http://localhost:3838

# Test user credentials
# These should be real credentials from your test environment
TEST_USER_EMAIL=
TEST_USER_PASSWORD=

# Optional: Invalid credentials for negative testing
# If not provided, tests will generate random invalid credentials
TEST_INVALID_EMAIL=
TEST_INVALID_PASSWORD=

# Optional: Test merchant details
# If not provided, tests will use data from the logged-in merchant
TEST_MERCHANT_NAME=
TEST_MERCHANT_PHONE=

# Optional: WhatsApp test number
# If not provided, tests will use the configured WhatsApp number
TEST_WHATSAPP_NUMBER=

# Test timeouts (in milliseconds)
TEST_TIMEOUT=30000
TEST_NAVIGATION_TIMEOUT=10000

# Browser configuration
# Options: chromium, firefox, webkit
TEST_BROWSER=chromium

# Headless mode
# Set to false to see the browser during tests
TEST_HEADLESS=true

# Screenshot on failure
TEST_SCREENSHOT_ON_FAILURE=true

# Video recording
# Options: on, off, retain-on-failure
TEST_VIDEO=retain-on-failure

# Parallel execution
# Number of parallel workers
TEST_WORKERS=1

# Retry failed tests
TEST_RETRIES=1

# Test report format
# Options: list, dot, json, junit, html
TEST_REPORTER=list